{
  "source": "./app/js",
  "destination": "./docs",
  "includes": ["\\.js$"],
  "excludes": [
    "^vendor/",
    "^utils",
    "^.*\/__tests__*?/",
    "(spec|Spec|test|Test)\\.js$"
  ],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {"enable": false},
        "brand": {
          "logo": "./app/images/icon.png",
          "title": "Тапанда: Макетная плата",
          "description": "Пакет frontend-решений для проекта Час кода",
          "repository": "https://bitbucket.org/makeitlab/codehour-breadboard-web",
          "site": "http://board.tapanda.ru",
          "author": "https://twitter.com/a_overklok"
        },
        "manual": {
          "index": "./man/index.md",
          "globalIndex": true,
          "asset": "./man/asset",
          "files": [
            "./man/overview.md",
            "./man/design.md",
            "./man/installation.md",
            "./man/usage.md",
            "./man/configuration.md",
            "./man/example.md",
            "./CHANGELOG.md"
          ]
        }
      }
    },
    {
      "name": "esdoc-lint-plugin",
      "option": {
        "enable": false
      }
    }
  ]
}